<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blanco"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView4"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="70dp"
        android:layout_marginTop="73dp"
        android:layout_marginVertical="50dp"
        android:text="Califique de 1 a 7 la atención prestada por la Oficina de Atención de Estudiantes"
        android:textAlignment="center"
        android:textColor="@color/color"
        android:textSize="47dp" />
    <TextView
        android:id="@+id/textView5"
        android:textStyle="normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="70dp"
        android:layout_marginTop="113dp"
        android:layout_marginVertical="110dp"
        android:text="@string/pregunta4"
        android:textAlignment="center"
        android:textColor="@color/color"
        android:textSize="27dp" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="90dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cara20"
            android:layout_width="238dp"
            android:layout_height="172dp"
            android:layout_marginHorizontal="50dp"
            android:layout_marginVertical="150dp"
            android:background="@drawable/higiene"
            android:text="Calidad Higiénica"
            android:textSize="0dp" />

        <TextView
            android:id="@+id/cara21"
            android:layout_width="306dp"
            android:layout_height="174dp"
            android:layout_marginHorizontal="50dp"
            android:layout_marginVertical="150dp"
            android:background="@drawable/comida"
            android:text="Calidad Gastronómica"
            android:textSize="0dp" />

        <TextView
            android:id="@+id/cara22"
            android:layout_width="270dp"
            android:layout_height="177dp"
            android:layout_marginHorizontal="50dp"
            android:layout_marginVertical="145dp"
            android:background="@drawable/atencion"
            android:text="Calidad de Atención"
            android:textSize="0dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="100dp"
        android:background="@color/lightorangedark"
        android:layout_marginVertical="450dp"
        android:id="@+id/linearLayout2">

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="100dp"
        android:background="@color/lightorangedark"
        android:layout_marginVertical="450dp"
        android:id="@+id/linearLayout3">
        <CheckBox
            android:id="@+id/check1"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="140dp"
            android:layout_centerVertical="true"
             />
        <CheckBox
            android:id="@+id/check2"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="100dp"
             />
        <CheckBox
            android:id="@+id/check3"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            />
    </LinearLayout>


    <Button
        android:id="@+id/BTNsiguiente5"
        android:layout_width="206dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textotime4"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="129dp"
        android:layout_marginHorizontal="90dp"
        android:layout_weight="1"
        android:background="@drawable/buttonstyleultimo"
        android:text="enviar"
        android:textSize="20dp"
        android:textColor="@color/blanco" />

    <Button
        android:id="@+id/volver"
        android:layout_width="206dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textotime4"
        android:layout_alignStart="@+id/linearLayout"
        android:background="@drawable/buttonstylevolver"
        android:text="volver"
        android:textSize="20dp"
        android:textColor="@color/blanco" />


    <TextView
        android:id="@+id/textotime4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/color"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="116dp" />


</RelativeLayout>